<%= form_with model: @payout, local: true do |f| %>
  <!-- Reference Field (Hidden) -->
  <%= f.hidden_field :reference %>
  <!-- Currency Field (Hidden) -->
  <%= f.hidden_field :currency %>
  <div class="field">
    <%= f.label :bank_code %>
    <%= f.text_field :bank_code, readonly: true %>
  </div>
  <div class="field">
    <%= f.label :account_number %>
    <%= f.text_field :account_number, readonly: true %>
  </div>
  <div class="field">
    <%= f.label :customer_name %>
    <%= f.text_field :customer_name, readonly: true %>
  </div>
  <div class="field">
    <%= f.label :customer_email %>
    <%= f.text_field :customer_email, readonly: true %>
  </div>
  <div class="field">
    <%= f.label :amount %>
    <%= f.number_field :amount %>
  </div>
  <div>
    <%= f.label :narration %>
    <%= f.text_area :narration, required: true %>
  </div>
  <div class="actions">
    <%= f.submit "Create Payout" %>
  </div>
<% end %>
